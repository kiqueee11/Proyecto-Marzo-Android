<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/profile_activity_linear_layout"
        android:layout_width="match_parent"
android:clickable="true"
        android:focusable="true"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:src="@drawable/flashmeet_logo"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="16dp">


        </ImageView>

        <ImageView

            android:id="@+id/profile_activity_profile_image"

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/denzel"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="16dp">


        </ImageView>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enrique PÃ©rez"
            android:textAlignment="center"
            android:textSize="30dp">

        </TextView>

        <TextView
            android:id="@+id/user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="26"
            android:textAlignment="center"
            android:textSize="30dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.TextButton"
                android:id="@+id/settings_button"
                android:layout_margin="30dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="120dp"
                android:focusable="true"
                app:icon="@drawable/baseline_settings_24"
                android:text="@string/Ajustes"
                android:textAlignment="center"
                app:iconSize="50dp"
                app:iconGravity="top"
                android:textColor="@color/md_theme_onBackground"
    android:clickable="true"

                android:drawablePadding="10dp"
                android:layout_marginBottom="20dp"

                android:textSize="20sp">


            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.TextButton"
                android:id="@+id/friends_button"
                android:layout_margin="30dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="120dp"
                android:focusable="true"
                app:icon="@drawable/baseline_person_24"
                android:text="@string/Amigos"
                android:textAlignment="center"
                android:clickable="true"
                app:iconSize="50dp"
                app:iconGravity="top"
                android:textColor="@color/md_theme_onBackground"


                android:drawablePadding="10dp"
                android:layout_marginBottom="20dp"

                android:textSize="20sp">


            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/meet_button"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="90dp"
            android:text="@string/meet"
            android:textSize="20sp">

        </com.google.android.material.button.MaterialButton>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>